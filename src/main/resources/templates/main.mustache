<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/styles/stylebesheniy.css" rel="stylesheet" type="text/css">
    <script src="/jquery.min.js"></script>
    <script src="/select2/dist/js/select2.min.js"></script>
    <script src="/select2/dist/js/i18n/ru.js"></script>

    <script>
        $(document).ready(function() {
            $('.js-select2').select2({
                placeholder: "Выберите город",
                maximumSelectionLength: 2,
                language: "ru"
            });
        });
    </script>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/">Tickets to trains</a>
        <a href="/main">Main</a>
        {{#adminRole}}
        <a href="/user">Users list</a>
        {{/adminRole}}
    </div>
    {{#user}}
    <div align="right">
        <form action="logout" method="post">
            <button type="submit" value="Sign Out">{{login}} &#xf08b;</button>
            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        </form>
    </div>
    {{/user}}
    <div>
        <form method="post" id="add" action="changePass">
            <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            <input type="text" name="name" placeholder="enter text" />
            <button type="submit">&#xf00c;</button>
        </form>
    </div>
    <div>Roles list:</div>
    <form method="post"  id="registr" action="filter">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <input type="text" name="filter" placeholder="enter filter" />
        <button type="submit">&#xf0b0;</button>
    </form>
    <form method="get"  id="ticket" action="chooseTickets">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
        <div class="field">
            From:
            <select class="js-select2" name="stationFirst" placeholder="Choose station">
                <option value=""></option>
                {{#stations}}
                <<option value="{{name}}">{{name}}</option>
                {{/stations}}
            </select>
        </div>
        <br>
        <div class="field">
            To:
            <select class="js-select2" name="stationLast" placeholder="Choose station">
                <option value=""></option>
                {{#stations}}
                <<option value="{{name}}">{{name}}</option>
                {{/stations}}
            </select>
        </div>
        <div class="field">
            <label></label>
            <button type="submit">&#xf0b0;</button>
        </div>

        <table border="3">
            <thead>
            <tr>
                <th>Choosen</th>
                <th>Departure station</th>
                <th>Arrival station</th>
                <th>Departure time</th>
                <th>Arrival time</th>
            </tr>
            </thead>
            <tbody>
            {{#stopsForMainDTOS}}
            <tr>
                <td><input name="radioStation" type="radio" id="radioStation"></td>
                <td>{{StationFirst}}</td>
                <td>{{StationLast}}</td>
                <td>{{TimeDeparture}}</td>
                <td>{{TimeArrival}}</td>
            </tr>
            {{/stopsForMainDTOS}}
            </tbody>
        </table>
    </form>
    {{#roles}}
        <div>
        <b>{{id}}</b>
        <i>{{name}}</i>
        </div>
    {{/roles}}
</body>
</html>