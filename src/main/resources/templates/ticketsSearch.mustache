<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/styles/stylebesheniy.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="/styles/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/my.style.css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-expand-lg bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Tickets to trains</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Переключатель навигации">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" href="/main">Search tickets</a>
                </li>
                {{#operatorRole}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Operator console
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/distances">Distances</a></li>
                        <li><a class="dropdown-item" href="/passengers">Passengers</a></li>
                        <li><a class="dropdown-item" href="/schedule">Schedule</a></li>
                        <li><a class="dropdown-item" href="/serviceClasses">Service classes</a></li>
                        <li><a class="dropdown-item" href="/stations">Stations</a></li>
                        <li><a class="dropdown-item" href="/stops">Stops</a></li>
                        <li><a class="dropdown-item" href="/tickets">Tickets</a></li>
                        <li><a class="dropdown-item" href="/trains">Trains</a></li>
                        <li><a class="dropdown-item" href="/wagons">Wagons</a></li>
                    </ul>
                </li>
                {{/operatorRole}}
                {{#adminRole}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Admin console
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="/user">Users</a></li>
                        <li><a class="dropdown-item" href="/roles">Roles</a></li>
                    </ul>
                </li>
                {{/adminRole}}
            </ul>
            {{#user}}
            <form action="logout" method="post">
                <button class="btn btn-outline-danger" type="submit">{{login}} &#xf08b;</button>
                <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
            </form>
            {{/user}}
        </div>
    </div>
</nav>
<br>
<div class="container">
    <div class="row">
        <div class="col-2">
        </div>
        <div class="col">
            <form method="get" id="ticket" action="chooseTickets">
                <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
                <div class="mainDiv">
                    <div class="field">
                        <label>From:</label>
                        <select class="js-select2" id="stationFirst" name="stationFirst" placeholder="Choose station">

                            {{#stations}}
                            <option value="{{name}}">{{name}}</option>
                            {{/stations}}
                        </select>
                    </div>
                    <br>
                    <div class="field">
                        <label>To:</label>
                        <select class="js-select2" id="stationLast" name="stationLast" placeholder="Choose station">

                            {{#stations}}
                            <option value="{{name}}">{{name}}</option>
                            {{/stations}}
                        </select>
                    </div>
                    <br>
                    <div class="field">
                        <label for="direct">Direct </label>
                        <input name="radioRun" type="radio" id="direct" value="direct" checked><br>
                        <label for="transfer">Transfer</label>
                        <input name="radioRun" type="radio" id="transfer" value="transfer"><br>
                    </div>
            </div>
            </form>
        </div>
        <div class="col-2">
        </div>
    </div>
</div>
<form method="get"  id="ticketTest" action="getTableTickets">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <div id="tableTrains">

    </div>
</form>
<form action="/takeTicket" method="post"  id="takeTicket">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <div id="tableTickets">

    </div>
    <div id="tableTicketsTwo">

    </div>
</form>
<script rel="javascript" type="text/javascript" src="/js/jquery.js"></script>
<script rel="javascript" type="text/javascript" src="/js/TableHighlite.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>