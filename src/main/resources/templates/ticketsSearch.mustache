<br>
<form method="post" id="takeTicket" action="/takeTicket">
    <div class="container">
        <div class="row">
            <div class="col-2">
            </div>
            <div class="col">
                {{#message}}
                <h2>{{message}}</h2>
                {{/message}}
                    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
                    <div class="mainDiv">
                        <div class="field">
                            <label>Date:</label>
                            <input class="js-select2" type="date" id="dateTicket" name="dateTicket" min="{{dateNow}}" value="{{dateNow}}">
                        </div>
                        <br><br><br>
                        <div class="field">
                            <label>From:</label>
                            <select class="js-select2" id="stationFirst" name="stationFirst" placeholder="Choose station">

                                {{#stations}}
                                <option value="{{name}}">{{name}}</option>
                                {{/stations}}
                            </select>
                        </div>
                        <br>
                        <div class="field">
                            <label>To:</label>
                            <select class="js-select2" id="stationLast" name="stationLast" placeholder="Choose station">

                                {{#stations}}
                                <option value="{{name}}">{{name}}</option>
                                {{/stations}}
                            </select>
                        </div>
                        <br>
                        <div class="field" hidden>
                            <label for="direct">Direct </label>
                            <input name="radioRun" type="radio" id="direct" value="direct" checked><br>
                            <label for="transfer">Transfer</label>
                            <input name="radioRun" type="radio" id="transfer" value="transfer"><br>
                        </div>
                </div>

            </div>
            <div class="col-2">
            </div>
        </div>
    </div>
    <br>
    <div id="tableTrains">

    </div>
    <br>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <div id="divForTwoTrains">

    </div>
    <br>
    <div>
        <div id="divForOneTrains">

        </div>
    </div>
    <hr>
    <h5><a data-toggle="collapse" href="#passengerInfo" aria-expanded="false" aria-controls="passengerInfo">Passenger info:</a></h5>
    <div class="collapse" id="passengerInfo">
        <table class="tablePassenger" id='passenger_table'>
            <tr>
                <td>Name</td>
                <td><input type='text' id='passengerName' name='passengerName' value="{{passenger.name}}"></td>
            </tr>
            <tr>
                <td>Surname</td>
                <td><input type='text' id='passengerSurname' name='passengerSurname' value="{{passenger.surname}}"></td>
            </tr>
            <tr>
                <td>Gender</td>
                <td><select class='js-select1' id='passengerGender' name='passengerGender' placeholder='Choose gender'>
                    {{#genders}}
                        {{#selected}}
                            <option value="{{name}}" selected>{{name}}</option>
                        {{/selected}}
                        {{^selected}}
                            <option value="{{name}}" >{{name}}</option>
                        {{/selected}}
                    {{/genders}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Passport</td>
                <td><input type='text' id='passengerPassport' name='passengerPassport' value="{{passenger.passport}}">
                </td>
            </tr>
            <tr>
                <td>Date of b.</td>
                <td><input type='date' id='passengerDate' name='passengerDate' value="{{passenger.dateOfBirth}}">
                </td>
            </tr>
            </tbody>
        </table>
        <div align='center'>
            <br><br>
            <button type='submit'>Confirm</button>
        </div>
    </div>
</form>
<script rel="javascript" type="text/javascript" src="/js/myQuery.js"></script>
<script rel="javascript" type="text/javascript" src="/js/TableHighlite.js"></script>
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>