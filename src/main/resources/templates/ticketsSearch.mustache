<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="/styles/stylebesheniy.css" rel="stylesheet" type="text/css">

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
</head>
<body>
<div class="topnav">
    <a class="active" href="/">Tickets to trains</a>
    <a href="/main">Main</a>
    {{#adminRole}}
    <a href="/user">Users list</a>
    {{/adminRole}}
</div>
{{#user}}
<div align="right">
    <form action="logout" method="post">
        <button type="submit" value="Sign Out">{{login}} &#xf08b;</button>
        <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    </form>
</div>
{{/user}}
<form method="get" id="ticket" action="chooseTickets">
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <div class="mainDiv">
        <div class="field">
            <label>From:</label>
            <select class="js-select2" id="stationFirst" name="stationFirst" placeholder="Choose station">

                {{#stations}}
                <option value="{{name}}">{{name}}</option>
                {{/stations}}
            </select>
        </div>
        <br>
        <div class="field">
            <label>To:</label>
            <select class="js-select2" id="stationLast" name="stationLast" placeholder="Choose station">

                {{#stations}}
                <option value="{{name}}">{{name}}</option>
                {{/stations}}
            </select>
        </div>
        <br>
        <div class="field">
            <label for="direct">Direct </label>
            <input name="radioRun" type="radio" id="direct" value="direct" checked><br>
            <label for="transfer">Transfer</label>
            <input name="radioRun" type="radio" id="transfer" value="transfer"><br>
        </div>
</div>
</form>
<form method="get"  id="ticketTest" action="getTableTickets">
    <div id="tableTrains">

    </div>
</form>
<script rel="javascript" type="text/javascript" src="/js/jquery.js"></script>
<script rel="javascript" type="text/javascript" src="/js/TableHighlite.js"></script>
</body>
</html>